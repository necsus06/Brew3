<Window x:Class="Brew3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BrewLog — Главная" 
        Height="800" 
        MinWidth="1024"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Стиль для кнопок фильтрации -->
        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Стиль для навигационных кнопок -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#908A85"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#908A85"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="20,10,20,10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Шапка -->
        <StackPanel Orientation="Horizontal" 
                    DockPanel.Dock="Top" 
                    Background="#616F53" 
                    Height="160">
            <TextBlock Foreground="White" 
                       FontSize="60" 
                       FontWeight="DemiBold"
                       FontFamily="Segoe UI"
                       Margin="50,30,30,10">
                BrewLog
            </TextBlock>

            <!-- Фильтры — заменён Canvas на UniformGrid для адаптивности -->
            <UniformGrid Columns="4" 
                         VerticalAlignment="Top" 
                         Margin="0,50,0,0" 
                         Height="60">
                <Button Content="Всё"      Style="{StaticResource FilterButton}" Click="All_Click"/>
                <Button Content="Блюда"    Style="{StaticResource FilterButton}" Click="Dishes_Click"/>
                <Button Content="Напитки"  Style="{StaticResource FilterButton}" Click="Drinks_Click"/>
                <Button Content="Десерты"  Style="{StaticResource FilterButton}" Click="Deserts_Click"/>
            </UniformGrid>

            <!-- Поиск -->
            <TextBox x:Name="SearchBox" 
                     MaxLength="250" 
                     TextChanged="TextBox_TextChanged"
                     Width="300" 
                     Height="60" 
                     FontSize="25" 
                     Padding="8" 
                     Foreground="#908A85" 
                     BorderBrush="#908A85" 
                     VerticalAlignment="Top"
                     Margin="50,50,0,0"/>
        </StackPanel>

        <!-- Левая панель навигации -->
        <StackPanel DockPanel.Dock="Left"
                    Background="White"
                    MinWidth="250" 
                    Width="300"
                    Margin="0,20,0,0">
            <Button Name="MenuButton"      Content="Меню"          Style="{StaticResource NavButton}" Click="MenuButton_Click"/>
            <Button Name="CartButton"
        Content="Корзина"
        Style="{StaticResource NavButton}"
        Click="CartButton_Click"/>

            <Button Name="OrdersButton"
        Content="Мои заказы"
        Style="{StaticResource NavButton}"
        Click="OrdersButton_Click"/>

            <Button Name="StatsButton"
        Content="Отчётность"
        Style="{StaticResource NavButton}"
        Click="StatsButton_Click"/>

            <Button Name="AddButton"
        Content="Добавить блюдо"
        Style="{StaticResource NavButton}"
        Click="AddButton_Click"/>

            <Separator Margin="20,20,20,10"/>

            <Button Name="LogoutButton"
        Content="Выйти"
        Style="{StaticResource NavButton}"
        Click="LogoutButton_Click"
        Background="#E8E4DD"
        Foreground="#8B6F47"/>

            <TextBlock x:Name="UserLoginText"
                       Text="Пользователь: "
                       FontSize="16"
                       Foreground="#908A85"
                       HorizontalAlignment="Center"
                       Margin="20,20,20,10"
                       TextAlignment="Center"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <ContentControl x:Name="MainContentRegion" />
    </DockPanel>
</Window>